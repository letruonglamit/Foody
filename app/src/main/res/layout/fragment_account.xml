<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/iv_ava_pf"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:background="@drawable/background">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/quynh_anh"
                android:scaleType="centerCrop"
                android:layout_margin="20dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp">
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quỳnh Anh Phạm"
                    android:textSize="20sp"
                    android:textColor="#ffff"/>

                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="578"
                    android:textSize="30sp"
                    android:layout_marginTop="25dp"
                    android:textColor="#ffff"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/coin"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageView"
                    android:layout_toRightOf="@+id/tv_coin"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="2dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FF7300">
            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@null">
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_gift"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/btn_gift"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/btn_gift"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ưu đãi"
                    android:layout_toRightOf="@id/btn_gift"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_checkin"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/btn_checkin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="5"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/btn_checkin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check in"
                    android:layout_toRightOf="@id/btn_checkin"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_star"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/btn_star" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="3"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/btn_star" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huy hiệu"
                    android:layout_toRightOf="@id/btn_star"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff" />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_maps"/>

    </LinearLayout>
</FrameLayout>
